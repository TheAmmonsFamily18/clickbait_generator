<div class="row row--topbar">
<h5 class="indent-sm">This is Clickbait Generator.</h5>
</div>
<div class='row row--headline'>
  <h1 class="js-headline"><%= @headline.html_safe %></h1>
</div>
<div class="row row--buttons">
  <div class="button-container">
    <% %w(listicle whathappens dontwanna whyi).each do |htype| %>
          <% activeclass = (htype==@current_val) ? 'active' : ''%>
          <span id="<%= htype %>" class="button-container__button <%= activeclass %> ">
            <%= list_type_title htype %>
          </span>
      <% end %>
  </div>
</div>

<div class='row row--twitter js-twitter'>
  <a href="https://twitter.com/share"
     class="twitter-share-button"
     data-url="http://clickbaitgenerator.herokuapp.com"
     data-text="<%= @headline.html_safe %>"
     data-via="ShannonEWells"
     data-size="large"
     data-count="none">&nbsp;</a>
</div>
